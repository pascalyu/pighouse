{% extends 'base.html.twig' %}

{% block title %}Action{% endblock %}

{% block body %}
    <h1>Action</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ action.id }}</td>
            </tr>
            <tr>
                <th>ActionType</th>
                <td>{{ action.actionType ? action.actionType|join(', ') : '' }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ action.amount }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ action.date ? action.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ action.createdAt ? action.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Last_updated_at</th>
                <td>{{ action.lastUpdatedAt ? action.lastUpdatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Deleted_at</th>
                <td>{{ action.deletedAt ? action.deletedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('action_index') }}">back to list</a>

    <a href="{{ path('action_edit', {'id': action.id}) }}">edit</a>

    {{ include('action/_delete_form.html.twig') }}
{% endblock %}
